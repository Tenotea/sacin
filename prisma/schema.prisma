// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum FirstOrderContentType {
    EVENT
    ARTICLE
    RESEARCH
}

enum Month {
    JAN
    FEB
    MAR
    APR
    MAY
    JUN
    JUL
    AUG
    SEP
    OCT
    NOV
    DEC
}

model Admin {
    id           String   @id @default(cuid())
    firstName    String
    lastName     String
    emailAddress String   @unique
    password     String   @db.Text
    updatedAt    DateTime @updatedAt
    createdAt    DateTime @default(now())
}

model Content {
    id          String                @id @default(cuid())
    slug        String                @unique
    title       String
    contentType FirstOrderContentType
    description String
    contentData String
    updatedAt   DateTime              @updatedAt
    createdAt   DateTime              @default(now())
}

model Event {
    id          String   @id @default(cuid())
    code        String?  @unique
    title       String
    description String
    startsAt    String
    endsAt      String
    location    String
    month       Month
    day         String
    year        String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}
